{
  "name": "a-clat",
  "type": "module",
  "version": "2.0.0",
  "description": "AI-Assisted Convective Cell Annotator - Advanced atmospheric analysis application",
  "author": "clevernat",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/clevernat/a-clat.git"
  },
  "keywords": ["weather", "atmospheric-science", "storm-tracking", "ai", "cloudflare"],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "wrangler pages dev",
    "deploy": "npm run build && wrangler pages deploy",
    "dev:sandbox": "wrangler pages dev dist --ip 0.0.0.0 --port 3000",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test": "curl http://localhost:3000",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings"
  },
  "dependencies": {
    "formdata-node": "^6.0.3",
    "hono": "^4.10.3"
  },
  "devDependencies": {
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}
