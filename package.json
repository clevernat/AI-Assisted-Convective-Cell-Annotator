{
  "name": "a-clat",
  "type": "module",
  "version": "2.0.0",
  "description": "AI-Assisted Convective Cell Annotator - Advanced atmospheric analysis application",
  "author": "clevernat",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/clevernat/a-clat.git"
  },
  "keywords": [
    "weather",
    "atmospheric-science",
    "storm-tracking",
    "ai",
    "cloudflare"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "wrangler pages dev",
    "deploy": "npm run build && wrangler pages deploy",
    "dev:sandbox": "wrangler pages dev dist --ip 0.0.0.0 --port 3000",
    "dev:d1": "wrangler pages dev dist --d1=a-clat-production --local --ip 0.0.0.0 --port 3000",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test": "curl http://localhost:3000",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:create": "wrangler d1 create a-clat-production",
    "db:migrate:local": "wrangler d1 migrations apply a-clat-production --local",
    "db:migrate:prod": "wrangler d1 migrations apply a-clat-production",
    "db:seed": "wrangler d1 execute a-clat-production --local --file=./seed.sql",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local && npm run db:seed",
    "db:console:local": "wrangler d1 execute a-clat-production --local",
    "db:console:prod": "wrangler d1 execute a-clat-production",
    "python:install": "cd python_backend && pip install -r requirements.txt",
    "python:dev": "cd python_backend && python app.py"
  },
  "dependencies": {
    "formdata-node": "^6.0.3",
    "gif.js": "^0.2.0",
    "hono": "^4.10.3",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.3",
    "marked": "^16.4.1",
    "netcdfjs": "^3.0.0",
    "pdfkit": "^0.17.2",
    "playwright": "^1.56.1",
    "qrcode": "^1.5.4"
  },
  "devDependencies": {
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}
